{
  "ApiConfiguration1": {
    // visible items: ControllerMask[.OperationMask] 
    // mask with wildcard support '*' and '?' (default: all)
    "VisibleItems": [
      "User.*",
      "WeatherForecast.Get*"
    ]
  },

  "ApiConfiguration2": {
    // hidden items: ControllerMask[.OperationMask] 
    // mask with wildcard support '*' and '?' (default: all)
    "HiddenItems": [
      "User.*",
      "WeatherForecast.DeleteWeatherForecast"
    ]
  },

  "ApiConfiguration3": {
    // visible items: ControllerMask[.OperationMask] 
    // mask with wildcard support '*' and '?' (default: all)
    "VisibleItems": [
      "*.Get*"
    ],
    // hidden items: ControllerMask[.OperationMask] 
    // mask with wildcard support '*' and '?' (default: all)
    "HiddenItems": [
      "User.Get*"
    ]
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
